<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/start_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/main_start_bg"
        />

    <TextView
        android:paddingLeft="@dimen/space_10_dp"
        android:paddingRight="@dimen/space_10_dp"
        android:layout_alignParentRight="true"
        android:id="@+id/start_seconds_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40px"
        android:layout_marginTop="40px"
        android:background="@drawable/start_second_tv_bg"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/txt_16_sp"
        />

</RelativeLayout>